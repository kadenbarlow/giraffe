{
  "compilerOptions": {
    "baseUrl": "./",
    "checkJs": true,
    "jsx": "react",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "paths": {
      "#components": ["./src/components"],
      "#components/*": ["./src/components/*"],
      "#features": ["./src/features"],
      "#features/*": ["./src/features/*"],
      "#hooks": ["./src/hooks"],
      "#hooks/*": ["./src/hooks/*"],
      "#lib": ["./src/lib"],
      "#lib/*": ["./src/lib/*"],
      "#stores": ["./src/stores"],
      "#stores/*": ["./src/stores/*"]
    }
  }
}
